<Window x:Class="ModManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mod Manager" Height="450" Width="800" MinWidth="600" MinHeight="400" ResizeMode="CanResize">
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Scrollable DataGrid -->
        <DataGrid x:Name="ModsDataGrid" Grid.Row="0" Margin="10" HeadersVisibility="Column"
          ColumnWidth="*" CanUserResizeColumns="True" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <!-- Mod Name Column -->
                <DataGridTextColumn Header="Mod Name" Binding="{Binding Name}" Width="*" />

                <!-- Size Column -->
                <DataGridTextColumn Header="Size (MB)" Binding="{Binding Size}" Width="*" />

                <!-- Type Column -->
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*" />

                <!-- Enabled Column -->
                <DataGridTemplateColumn Header="Enabled" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsEnabled, Mode=TwoWay}" 
                              Checked="Enabled_Checked" 
                              Unchecked="Enabled_Unchecked" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>


        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Left" Margin="10">
            <Button Content="Add Mods" MinWidth="100" Click="AddModsButton_Click" Margin="5" />
            <Button Content="Remove Selected" MinWidth="120" Click="RemoveModsButton_Click" Margin="5" />
            <Button Content="Export Profile" MinWidth="120" Click="ExportProfileButton_Click" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
